<+>{% extends 'base.html.twig' %}\n\n{% block title %}Perfil{% endblock %}\n\n{% block body %}\n    <div class=\"container mt-5\">\n        <div class=\"card shadow-lg\">\n            <!-- Cabecera -->\n            <div class=\"card-header bg-primary text-white text-center\">\n                <h1>Perfil de {{ user.username }}\n                    {% if 'ROLE_PREMIUM' in user.roles %}\n                        <span class=\"text-warning\">⭐</span>\n                    {% endif %}\n                </h1>\n            </div>\n\n            <!-- Contenido principal -->\n            <div class=\"card-body\">\n                <!-- Información del perfil -->\n                <p><strong>Nombre de usuario:</strong> {{ user.username }}</p>\n                <p><strong>Email:</strong> {{ user.email }}</p>\n                <p><strong>Fecha de nacimiento:</strong> {{ user.birthdate|date('Y-m-d') }}</p>\n                <p><strong>Biografía:</strong> {{ user.bio }}</p>\n                <p><strong>Género:</strong> {{ user.gender }}</p>\n\n                {% if app.user and user.id == app.user.id %}\n                {% if 'ROLE_PREMIUM' in user.roles %}\n                    <p><strong>Estado:</strong> Usuario Premium</p>\n                    <form method=\"post\" action=\"{{ path('app_downgrade_from_premium') }}\">\n                        <button type=\"submit\" class=\"button\">Cancelar Premium</button>\n                    </form>\n                {% else %}\n                    <form method=\"post\" action=\"{{ path('app_upgrade_to_premium') }}\">\n                        <button type=\"submit\" class=\"button-premium\">Actualizar a Premium</button>\n                    </form>\n                {% endif %}\n                {% endif %}\n            </div>\n\n            <!-- Sección de \"Mis Posts\" -->\n            <div class=\"card-footer bg-light\">\n                <h3 class=\"text-center\">Mis Posts</h3>\n                {% if posts is empty %}\n                    <p class=\"text-center text-muted\">No has creado ningún post todavía.</p>\n                {% else %}\n                    <ul class=\"list-group mt-3\">\n                        {% for post in posts %}\n                            <li class=\"list-group-item\">\n                                <h5>{{ post.title }}</h5>\n                                {% if post.img %}\n                                    <div class=\"post-image-wrapper\">\n                                        <img src=\"{{ asset(post.img) }}\" alt=\"Imagen de {{ post.title }}\" class=\"img-fluid rounded\" style=\"max-width: 100%; height: auto;\">\n                                    </div>\n                                {% endif %}\n                                <p>Publicado el {{ post.datetime|date('d/m/Y H:i') }}</p>\n                                <p>{{ post.content }}</p>\n                            </li>\n                        {% endfor %}\n                    </ul>\n                {% endif %}\n            </div>\n\n            {% if app.user and user.id == app.user.id %}\n            <!-- Sección de \"Mis Posts Guardados\" -->\n            <div class=\"card-footer bg-light mt-4\">\n                <h3 class=\"text-center\">Mis Posts Guardados</h3>\n                {% if savedPosts is empty %}\n                    <p class=\"text-center text-muted\">No has guardado ningún post todavía.</p>\n                {% else %}\n                    <ul class=\"list-group mt-3\">\n                        {% for savedPost in savedPosts %}\n                            {% if savedPost.post is not null %}\n                                <div class=\"post-card\">\n                                    <h3>{{ savedPost.post.title }}</h3>\n                                    <p>{{ savedPost.post.content }}</p>\n                                    <p><strong>{{ savedPost.post.user.username }}</strong> - {{ savedPost.post.datetime|date('Y-m-d H:i') }}</p>\n                                    <form method=\"post\" action=\"{{ path('saved_posts_remove', {'id': savedPost.id}) }}\">\n                                        <button type=\"submit\" class=\"btn btn-danger btn-sm disabled\">Eliminar</button>\n                                    </form>\n                                </div>\n                            {% else %}\n                                <div class=\"post-card\">\n                                    <p class=\"text-danger\">El post asociado ya no está disponible.</p>\n                                    <form method=\"post\" action=\"{{ path('saved_posts_remove', {'id': savedPost.id}) }}\">\n                                        <button type=\"submit\" class=\"btn btn-danger btn-sm\">Eliminar</button>\n                                    </form>\n                                </div>\n                            {% endif %}\n                        {% endfor %}\n                    </ul>\n                {% endif %}\n            </div>\n\n        <!-- Formulario de edición y botón de cancelar -->\n\n            {%  if (form) %}\n            <!-- Sección de edición del perfil -->\n            <div class=\"card-footer bg-light\">\n                <h3 class=\"text-center\">Editar Perfil</h3>\n                {% if not show_form %}\n                    <div class=\"text-center\">\n                        <a href=\"{{ path('app_edit_profile') }}\" class=\"button\">Editar Perfil</a>\n                    </div>\n                {% else %}\n                    <div class=\"mt-3\">\n                        {{ form_start(form) }}\n                        <div class=\"form-group\">\n                            {{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}\n                            {{ form_row(form.username, {'attr': {'class': 'form-control'}}) }}\n                            {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}\n                            {{ form_row(form.birthdate, {'attr': {'class': 'form-control'}}) }}\n                            {{ form_row(form.bio, {'attr': {'class': 'form-control'}}) }}\n                            {{ form_row(form.gender, {'attr': {'class': 'form-control'}}) }}\n                            {{ form_row(form.userImage, {'attr': {'class': 'form-control'}}) }}\n                        </div>\n                        <div class=\"mt-4\">\n                            {{ form_row(form.submit, {'attr': {'class': 'btn btn-success'}}) }}\n                        </div>\n                        {{ form_end(form) }}\n                        <div class=\"text-center mt-3\">\n                            <a href=\"{{ path('app_profile') }}\" class=\"button\">Cancelar</a>\n                        </div>\n                    </div>\n                {% endif %}\n            </div>\n            {% endif %}\n            {% endif %}\n        </div>\n\n        <!-- Botón de volver -->\n        <div class=\"text-center mt-4\">\n            <a href=\"{{ path('app_inicio') }}\" class=\"button\">Volver a la Página Principal</a>\n        </div>\n    </div>\n{% endblock %}\n

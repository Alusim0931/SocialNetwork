{% extends 'base.html.twig' %}

{% block title %}Perfil{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="card shadow-lg border-0">
            <!-- Cabecera -->
            <div class="card-header bg-gradient-primary text-white text-center py-4" style="background: linear-gradient(45deg, #4e73df, #1cc88a);">
                <h1 class="mb-0">Perfil de {{ user.username }}
                    {% if 'ROLE_PREMIUM' in user.roles %}
                        <span class="text-warning">⭐</span>
                    {% endif %}
                </h1>
            </div>

            <!-- Contenido principal -->
            <div class="card-body px-4">
                <div class="row align-items-center">
                    <!-- Imagen del perfil -->
                    <div class="col-md-4 text-center">
                        <img src="{{ asset(user.userImage|default('/uploads')) }}" alt="Avatar de {{ user.username }}" class="rounded-circle shadow-lg" style="width: 150px; height: 150px; object-fit: cover;">
                    </div>

                    <!-- Información del perfil -->
                    <div class="col-md-8">
                        <ul class="list-unstyled">
                            <li class="mb-2">
                                <strong>Nombre de usuario:</strong> {{ user.username }}
                            </li>
                            <li class="mb-2">
                                <strong>Email:</strong> {{ user.email }}
                            </li>
                            <li class="mb-2">
                                <strong>Fecha de nacimiento:</strong> {{ user.birthdate|date('Y-m-d') }}
                            </li>
                            <li class="mb-2">
                                <strong>Biografía:</strong> {{ user.bio }}
                            </li>
                            <li class="mb-2">
                                <strong>Género:</strong> {{ user.gender }}
                            </li>
                        </ul>

                        {% if app.user and user.id == app.user.id %}
                            <div>
                                {% if 'ROLE_PREMIUM' in user.roles %}
                                    <span class="badge badge-success">Usuario Premium</span>
                                    <form method="post" action="{{ path('app_downgrade_from_premium') }}" class="mt-3">
                                        <button type="submit" class="btn btn-danger btn-sm">Cancelar Premium</button>
                                    </form>
                                {% else %}
                                    <form method="post" action="{{ path('app_upgrade_to_premium') }}" class="mt-3">
                                        <button type="submit" class="btn btn-warning btn-sm">Actualizar a Premium</button>
                                    </form>
                                {% endif %}
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>

            <!-- Sección de "Mis Posts" -->
            <div class="card-footer bg-light py-4">
                <h3 class="text-center text-primary">Mis Posts</h3>
                {% if posts is empty %}
                    <p class="text-center text-muted">No has creado ningún post todavía.</p>
                {% else %}
                    <div class="row mt-3">
                        {% for post in posts %}
                            <div class="col-md-4 mb-4">
                                <div class="card shadow-sm">
                                    {% if post.img %}
                                        <img src="{{ asset(post.img) }}" alt="Imagen de {{ post.title }}" class="card-img-top rounded-top">
                                    {% endif %}
                                    <div class="card-body">
                                        <h5 class="card-title">{{ post.title }}</h5>
                                        <p class="card-text text-muted">Publicado el {{ post.datetime|date('d/m/Y H:i') }}</p>
                                        <p class="card-text">{{ post.content|slice(0, 100) ~ '...' }}</p>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>

            <!-- Sección de "Mis Posts Guardados" -->
            <div class="card-footer bg-light mt-4">
                <h3 class="text-center">Mis Posts Guardados</h3>
                {% if savedPosts is empty %}
                    <p class="text-center text-muted">No has guardado ningún post todavía.</p>
                {% else %}
                    <ul class="list-group mt-3">
                        {% for savedPost in savedPosts %}
                            {% if savedPost.post is not null %}
                                <div class="post-card">
                                    <h3>{{ savedPost.post.title }}</h3>
                                    <p>{{ savedPost.post.content }}</p>
                                    <p><strong>{{ savedPost.post.user.username }}</strong> - {{ savedPost.post.datetime|date('Y-m-d H:i') }}</p>
                                    <form method="post" action="{{ path('saved_posts_remove', {'id': savedPost.id}) }}">
                                        <button type="submit" class="btn btn-danger btn-sm disabled">Eliminar</button>
                                    </form>
                                </div>
                            {% else %}
                                <div class="post-card">
                                    <p class="text-danger">El post asociado ya no está disponible.</p>
                                    <form method="post" action="{{ path('saved_posts_remove', {'id': savedPost.id}) }}">
                                        <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                                    </form>
                                </div>
                            {% endif %}
                        {% endfor %}
                    </ul>
                {% endif %}
            </div>

            <!-- Sección de edición del perfil -->
            {% if app.user and user.id == app.user.id %}
                <div class="card-footer bg-light py-4">
                    <h3 class="text-center text-primary">Editar Perfil</h3>
                    {% if not show_form %}
                        <div class="text-center mt-3">
                            <a href="{{ path('app_edit_profile') }}" class="btn btn-info">Editar Perfil</a>
                        </div>
                    {% else %}
                        <div class="mt-3">
                            {{ form_start(form) }}
                            <div class="row">
                                <div class="col-md-6">
                                    {{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_row(form.username, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
                                </div>
                                <div class="col-md-6">
                                    {{ form_row(form.birthdate, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_row(form.bio, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_row(form.gender, {'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>
                            <div class="mt-4 text-center">
                                {{ form_row(form.submit, {'attr': {'class': 'btn btn-success'}}) }}
                                <a href="{{ path('app_profile') }}" class="btn btn-secondary">Cancelar</a>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    {% endif %}
                </div>
            {% endif %}
        </div>

        <!-- Botón de volver -->
        <div class="text-center mt-4">
            <a href="{{ path('app_inicio') }}" class="btn btn-primary">Volver a la Página Principal</a>
        </div>
    </div>
{% endblock %}

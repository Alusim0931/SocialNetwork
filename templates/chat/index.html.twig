{% extends 'base.html.twig' %}

{% block body %}

    <div class="container py-5">
        <h1 class="mb-4 text-center">Direct Messages</h1>
        <section id="banner-chats">
            <ul>
                {% if chats %}
                    {% for chat in chats %}
                        {{ include('chat/_chat_entry.html.twig') }}
                    {% endfor %}
                {% else %}
                    <li>No chats found</li>
                {% endif %}
            </ul>
        </section>
    </div>

{% endblock %}